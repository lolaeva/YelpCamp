<%- include("../partials/header") %>

<div class="ui container">
    <h1 class="newh1">Add new comment to <%= campground.name %></h1>
    <div class="row">
        <div class="newForm">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="comment[text]" id="" placeholder="text" required>
                </div>
                <div class="form-group">
                    <button class="ui fluid primary basic button">Submit</button>
                </div>
            </form>   
            <a href="/campgrounds">Go Back</a>     
        </div>
    </div>
</div>

<%- include("../partials/footer") %>        
