<%- include("../partials/header") %>

<div class="ui container">
    <header class="jumbotron">
        <div class="ui container"> <!-- another div to prevent removing side spaces in xs view -->
            <h1>Welcome to Yelcamp!</h1>
            <p>These are camground</p>
            <p>    
                <a href="/campgrounds/new"><button class="ui primary basic button">Add new campground</button></a>
            </p>    
        </div>
    </header>
    
    <!-- IMAGE GRIDS-->
    <div class="row text-center">
        <!-- display items in array -->
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p><a href="/campgrounds/<%= campground._id %>" class="ui primary basic button">More Info</a></p>
                </div>
            </div>
        <% }); %>
    </div>
    <!-- PAGINATION BOOTSTRAP 3 -->
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/campgrounds">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</div>

<%- include("../partials/footer") %>
