<%- include("../partials/header") %>

<div class="ui container">
    <h1 class="newh1">Edit <%= campground.name %> </h1>
    <div class="row">
        <div class="newForm">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="campground[name]" id="" value=<%= campground.name %> required>
                </div>
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="number" name="campground[price]" id="" value=<%= campground.price %> min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" id="" value=<%= campground.image %> required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" id="" value=<%= campground.description %> >
                </div>
                <div class="form-group">
                    <button class="ui fluid primary basic button">Submit</button>
                </div>
            </form>   
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>     
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
