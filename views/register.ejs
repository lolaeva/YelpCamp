<%- include("./partials/header") %>

<div class="ui container">
    <h1 class="newh1">Register</h1>
    <div class="row">
        <div class="newForm">
            <form action="/register" method="POST">
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="username" id="" placeholder="username" required>
                </div>
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="email" id="" placeholder="me@email.com">
                </div>
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="avatar" id="" placeholder="avatar url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="" placeholder="password" required>
                </div>
                <div class="form-group">
                    <button class="ui fluid primary basic button">Sign Up</button>
                </div>
            </form>   
            <a href="/">Go Back</a>     
        </div>
    </div>
</div>

<%- include("./partials/footer") %>
