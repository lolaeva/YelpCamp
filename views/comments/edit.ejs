<div class="ui container">
    <h1 class="newh1">Edit comment</h1>
    <div class="row">
        <div class="newForm">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group"> <!--adds spacing between form inputs-->
                    <input class="form-control" type="text" name="comment[text]" id="" value="<%= comment.text %>" required>
                </div>
                <div class="form-group">
                    <button class="ui fluid primary basic button">Edit</button>
                </div>
            </form>   
            <a href="/campgrounds">Go Back</a>     
        </div>
    </div>
</div>

